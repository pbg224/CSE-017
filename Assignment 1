	public static void printUnsafeBanks(int l, double[] a, double[] ub)
	{
		int x = 0;
		for(int i = 0; i < a.length; i++)
		{
			if(a[i] < l )
			{
				ub[x] = i;
				x++;
				System.out.printf("Business &f is unsafe\n", i);
			}
		}
	}
	
	
	
	
	
	
